---
const { image = '', alt = '', title = '', bullets = [], cta = null, class: className = '' } = Astro.props;
---
<div class={["group relative overflow-hidden rounded-2xl shadow-lg p-0 flex flex-col transition-all duration-300 hover:shadow-2xl cursor-pointer", className].join(' ')}>
  {image && (
    <div class="relative w-full h-56 overflow-hidden rounded-t-2xl">
      <img src={image} alt={alt || title} class="object-cover w-full h-full transition-transform duration-500 group-hover:scale-105" loading="lazy" />
    </div>
  )}
  <div class="p-6 flex flex-col flex-1 bg-white">
    <h3 class="text-xl font-bold mb-3 text-on-primary group-hover:text-on-primary transition-colors duration-300">{title}</h3>
    <ul class="text-left mb-4 space-y-2">
      {(bullets as string[]).map((bullet: string) => (
        <li class="flex items-start gap-2 text-on-primary">
          <span class="mt-1">✔️</span>
          <span>{bullet}</span>
        </li>
      ))}
    </ul>
  </div>
</div> 