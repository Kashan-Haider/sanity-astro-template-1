---
const { stats = [] } = Astro.props;
---
<div class="w-full flex flex-wrap justify-center gap-8 py-10">
  {stats.map(({ icon, image, value, label }: { icon?: string; image?: string; value: string; label: string }, i: number) => (
    <div class="flex flex-col items-center w-[250px] bg-light/30 dark:bg-light/10 backdrop-blur-md rounded-2xl shadow-lg border border-light/40 p-6 transition-all duration-300 hover:shadow-2xl hover:-translate-y-1" aria-label={label}>
      <div class="flex items-center justify-center w-20 h-20 mb-4 rounded-xl bg-gradient-to-br from-primary via-secondary to-primary/80 shadow-md text-light">
        {icon ? (
          <div set:html={icon} />
        ) : image ? (
          <img 
            src={image} 
            alt={label}
            class="w-full h-full object-cover rounded-xl"
            loading="lazy"
          />
        ) : null}
      </div>
      <div class="text-3xl font-extrabold text-dark mb-1">{value}</div>
      <div class="text-sm font-semibold text-dark text-center">{label}</div>
    </div>
  ))}
</div> 
