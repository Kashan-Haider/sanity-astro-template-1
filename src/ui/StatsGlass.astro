---
const { stats = [] } = Astro.props;
---
<div class="w-full flex flex-wrap justify-center gap-8 py-10">
  {stats?.map(({ value, label }: { icon?: string; image?: string; value: string; label: string }, i: number) => (
    <div class="flex flex-col items-center w-[250px] bg-light/30 dark:bg-light/10 backdrop-blur-md rounded-2xl shadow-lg border border-light/40 p-6 transition-all duration-300 hover:shadow-2xl hover:-translate-y-1" aria-label={label}>
      <div class="flex items-center justify-center w-32 h-24 md:w-40 md:h-30 mb-4 rounded-xl bg-gradient-to-br from-primary via-secondary to-primary/80 shadow-md text-light">
        <div class="text-3xl font-extrabold text-light mb-1">{value}+</div>
      </div>
      <div class="text-lg font-semibold text-dark text-center">{label}</div>
    </div>
  ))}
</div> 
