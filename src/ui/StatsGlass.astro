---
const { stats = [] } = Astro.props;
---
<div class="w-full flex flex-wrap justify-center gap-8 py-10">
  {stats.map(({ icon, value, label }: { icon: string; value: string; label: string }, i: number) => (
    <div class="flex flex-col items-center w-[250px] bg-white/30 dark:bg-white/10 backdrop-blur-md rounded-2xl shadow-lg border border-white/40 p-6 transition-all duration-300 hover:shadow-2xl hover:-translate-y-1" aria-label={label}>
      <div class="flex items-center justify-center w-20 h-20 mb-4 rounded-xl bg-gradient-to-br from-primary via-accent to-primary/80 text-3xl text-white shadow-md">
        {icon}
      </div>
      <div class="text-3xl font-extrabold text-heading-light mb-1">{value}</div>
      <div class="text-body-light text-base font-medium text-center opacity-80">{label}</div>
    </div>
  ))}
</div> 