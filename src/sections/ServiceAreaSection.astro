---
import ServiceAreaCard from '../ui/ServiceAreaCard.astro';
---
<section id="service-areas" class="w-full py-24 px-4 bg-gradient-to-br from-secondary via-secondary/60 to-secondary">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-14">
      <h2 class="text-4xl md:text-5xl font-extrabold mb-4 text-light">Service Areas</h2>
      <p class="text-lg text-light max-w-2xl mx-auto">We proudly serve a wide range of neighborhoods and cities. Find your area below and get in touch for fast, reliable plumbing services.</p>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <ServiceAreaCard
        city="Downtown"
        region="Central City"
        description="Rapid response and expert service in the heart of the city."
        cta={{ label: 'Get Service', href: '#' }}
      />
      <ServiceAreaCard
        city="Greenfield"
        region="North Suburbs"
        description="Eco-friendly plumbing solutions for homes and businesses."
        cta={{ label: 'Book Now', href: '#' }}
      />
      <ServiceAreaCard
        city="Lakeside"
        region="East District"
        description="Trusted by families for quality repairs and installations."
        cta={{ label: 'Contact Us', href: '#' }}
      />
      <ServiceAreaCard
        city="Tech Park"
        region="Business Zone"
        description="Commercial plumbing for offices, startups, and enterprises."
        cta={{ label: 'Learn More', href: '#' }}
      />
      <ServiceAreaCard
        city="Westview"
        region="West End"
        description="Fast, friendly service for apartments and condos."
        cta={{ label: 'Get a Quote', href: '#' }}
      />
      <ServiceAreaCard
        city="Sunnydale"
        region="Southside"
        description="Affordable solutions for growing neighborhoods."
        cta={{ label: 'See Details', href: '#' }}
      />
    </div>
  </div>
</section> 