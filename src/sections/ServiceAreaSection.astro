---
import ServiceAreaCard from '../ui/ServiceAreaCard.astro';
---
<section id="service-areas" class="w-full py-24 px-4 bg-gradient-to-br from-accent via-accent/60 to-accent">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-14">
      <h2 class="text-4xl md:text-5xl font-extrabold mb-4 text-heading-dark">Service Areas</h2>
      <p class="text-lg text-body-dark max-w-2xl mx-auto">We proudly serve a wide range of neighborhoods and cities. Find your area below and get in touch for fast, reliable plumbing services.</p>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <ServiceAreaCard
        image="https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=400&q=80"
        city="Downtown"
        region="Central City"
        description="Rapid response and expert service in the heart of the city."
        cta={{ label: 'Get Service', href: '#' }}
      />
      <ServiceAreaCard
        image="https://images.unsplash.com/photo-1464983953574-0892a716854b?auto=format&fit=crop&w=400&q=80"
        city="Greenfield"
        region="North Suburbs"
        description="Eco-friendly plumbing solutions for homes and businesses."
        cta={{ label: 'Book Now', href: '#' }}
      />
      <ServiceAreaCard
        image="https://images.unsplash.com/photo-1519125323398-675f0ddb6308?auto=format&fit=crop&w=400&q=80"
        city="Lakeside"
        region="East District"
        description="Trusted by families for quality repairs and installations."
        cta={{ label: 'Contact Us', href: '#' }}
      />
      <ServiceAreaCard
        image="https://images.unsplash.com/photo-1520880867055-1e30d1cb001c?auto=format&fit=crop&w=400&q=80"
        city="Tech Park"
        region="Business Zone"
        description="Commercial plumbing for offices, startups, and enterprises."
        cta={{ label: 'Learn More', href: '#' }}
      />
      <ServiceAreaCard
        image="https://images.unsplash.com/photo-1515378791036-0648a3ef77b2?auto=format&fit=crop&w=400&q=80"
        city="Westview"
        region="West End"
        description="Fast, friendly service for apartments and condos."
        cta={{ label: 'Get a Quote', href: '#' }}
      />
      <ServiceAreaCard
        image="https://images.unsplash.com/photo-1521737852567-6949f3f9f2b5?auto=format&fit=crop&w=400&q=80"
        city="Sunnydale"
        region="Southside"
        description="Affordable solutions for growing neighborhoods."
        cta={{ label: 'See Details', href: '#' }}
      />
    </div>
  </div>
</section> 