        alt="Plumber with maintenance tools"
        title="Maintenance Plans"
        bullets={["Scheduled checkups", "Preventative care", "Priority support", "Discounted repairs"]}
        cta={{ href: '#', label: 'Learn More' }}
      />
      <ServiceBox
        image="https://images.unsplash.com/photo-1520880867055-1e30d1cb001c?auto=format&fit=crop&w=600&q=80"
        alt="Leak detection equipment"
        title="Leak Detection"
        bullets={["Advanced technology", "Non-invasive methods", "Early problem detection", "Detailed reports"]}
        cta={{ href: '#', label: 'Learn More' }}
      />
      <ServiceBox
        image="https://images.unsplash.com/photo-1515378791036-0648a3ef77b2?auto=format&fit=crop&w=600&q=80"
        alt="Pipe replacement"
        title="Pipe Replacement"
        bullets={["Old pipe upgrades", "Minimal disruption", "Quality materials", "Long-term reliability"]}
        cta={{ href: '#', label: 'Learn More' }}
      />
