---
import ImageOptimization from '../utils/ImageOptimization.astro';
import { sanityClient } from 'sanity:client';

export interface Props {
  title?: string;
  description?: string;
  features?: string[];
  ctaButton?: {
    label: string;
    href: string;
  };
  templateId?: string;
  documentId?: string;
}

const { 
  title = "Trusted Plumbing Experts for Your Home & Business",
  description = "With decades of experience, AquaFlow delivers reliable, innovative, and affordable plumbing solutions. Our certified professionals are dedicated to quality, safety, and customer satisfaction—24/7.",
  features = [
    "Licensed & Insured Professionals",
    "Upfront, Transparent Pricing", 
    "24/7 Emergency Service",
    "100% Satisfaction Guarantee"
  ],
  ctaButton = { label: "Contact Our Team", href: "#contact" },
  templateId = import.meta.env.TEMPLATE_ID,
  documentId = import.meta.env.DOCUMENT_ID
} = Astro.props;

// Fetch about section image using the image slot
const aboutImage = await sanityClient.fetch(`
  *[_type == "optimizedImage" && 
    templateId == $templateId && 
    documentId == $documentId && 
    imageId == "about-image-01"][0] {
    "url": image.asset->url,
    altText
  }
`, { templateId, documentId });
---

<section id="about" class="min-h-screen relative bg-gradient-to-br from-light/80 via-dark/10 to-light flex items-center justify-between">
  <div class="flex flex-col md:flex-row items-center gap-12">
    <!-- Image Side -->
    <div class="h-full flex justify-center md:justify-end">
      {aboutImage?.url ? (
        <ImageOptimization 
          src={aboutImage.url} 
          alt={aboutImage.altText || "About section image"} 
          class="md:w-[50vw] h-screen object-cover" 
          loading="lazy" 
        />
      ) : (
        <div class="md:w-[50vw] h-screen bg-gray-200 flex items-center justify-center">
          <div class="text-center text-gray-500">
            <p class="text-sm font-medium">Sanity Content Failed to Load</p>
            <p class="text-xs mt-1">Image slot: about-image-01</p>
          </div>
        </div>
      )}
    </div>
    
    <!-- Text Side -->
    <div class="flex-1 p-5 py-10 md:p-10 lg:p-20 flex flex-col items-center md:items-start text-center md:text-left">
      <span class="inline-block mb-4 px-5 py-2 rounded-full bg-secondary/90 text-light font-semibold shadow text-sm">About Us</span>
      
      <h2 class="text-4xl md:text-5xl lg:text-7xl font-extrabold mb-4 text-dark">
        {title}
      </h2>
      
      <p class="text-lg text-dark mb-6 max-w-xl">
        {description}
      </p>
      
      <ul class="mb-6 space-y-2 text-dark text-base max-w-md text-left">
        {features.map((feature) => (
          <li class="flex items-center gap-2">
            <span class="text-secondary">✔️</span>
            <span>{feature}</span>
          </li>
        ))}
      </ul>
      
      <a 
        href={ctaButton.href} 
        class="inline-block rounded-full px-8 py-3 text-base font-bold shadow transition bg-secondary hover:bg-primary text-light focus:outline-none focus:ring-2 focus:ring-white"
      >
        {ctaButton.label}
      </a>
    </div>
  </div>
</section> 