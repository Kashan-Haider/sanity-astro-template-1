---
import StatsGlass from '../ui/StatsGlass.astro';

export interface Props {
  title?: string;
  statistics?: Array<{
    value: string;
    label: string;
    icon?: string;
    image?: {
      url: string;
      altText: string;
    };
    isActive?: boolean;
  }>;
}

const { title, statistics } = Astro.props;

// Filter active statistics
---

<section class="bg-gradient-to-br from-light/80 via-dark/10 to-light py-10 md:py-20 px-4 md:px-10">
  <h1 class="text-center text-3xl md:text-5xl font-bold mb-10">
    {title?.split(' ').map((word, index) => 
      index === 1 ? <span class="text-secondary">{` ${word}`}</span> : ` ${word}`
    )}
  </h1>
  
  <StatsGlass stats={statistics} /> 
</section>
