---
import StatsGlass from '../ui/StatsGlass.astro';
---
<section class="bg-gradient-to-br from-light/80 via-dark/10 to-light py-10 md:py-20 px-4 md:px-10">

    <h1 class="text-center text-3xl md:text-5xl font-bold mb-10">Service <span class="text-secondary">Highlights</span></h1>
    <StatsGlass stats={[
        { 
          image: "https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=200&q=80", 
          value: '500+', 
          label: 'Projects Completed' 
        },
        { 
          image: "https://images.unsplash.com/photo-1464983953574-0892a716854b?auto=format&fit=crop&w=200&q=80", 
          value: '99.9%', 
          label: 'Uptime Guarantee' 
        },
        { 
          image: "https://images.unsplash.com/photo-1519125323398-675f0ddb6308?auto=format&fit=crop&w=200&q=80", 
          value: '24/7', 
          label: 'Expert Support' 
        },
        { 
          image: "https://images.unsplash.com/photo-1520880867055-1e30d1cb001c?auto=format&fit=crop&w=200&q=80", 
          value: '150+', 
          label: 'Happy Clients' 
        },
      ]} /> 
</section>