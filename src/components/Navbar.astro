---
import GlassCard from './GlassCard.astro';
---
<nav class="fixed top-0 z-50 w-full" role="navigation" aria-label="Main Navigation" x-data="{ open: false }">
  <GlassCard class="backdrop-blur-2xl bg-surface/40 shadow-xl shadow-surface/30 px-0 py-0">
    <div class="max-w-7xl mx-auto flex items-center justify-between px-4 sm:px-8 py-3">
      <a href="#" class="flex items-center gap-2 font-bold text-xl tracking-tight text-heading-dark" aria-label="AquaFlow Home">
        <span>AquaFlow</span>
      </a>
      <!-- Desktop Nav -->
      <ul class="hidden md:flex gap-6 text-base font-medium text-subheading-dark">
        <li><a href="#services" class="hover:text-accent transition">Services</a></li>
        <li><a href="#gallery" class="hover:text-accent transition">Gallery</a></li>
        <li><a href="#testimonials" class="hover:text-accent transition">Testimonials</a></li>
        <li><a href="#service-areas" class="hover:text-accent transition">Service Areas</a></li>
        <li><a href="#contact" class="hover:text-accent transition">Contact</a></li>
      </ul>
      <div class="flex gap-2 items-center">
        <a href="#signin" class="hidden sm:inline-block px-4 py-2 rounded-lg font-semibold text-heading-dark hover:bg-brand/20 transition">Sign In</a>
        <a href="#book" class="inline-block px-4 py-2 rounded-lg font-bold bg-accent text-heading-dark shadow hover:bg-brand hover:text-white transition">Book Online</a>
        <!-- Hamburger for mobile -->
        <button @click="open = !open" :aria-expanded="open" aria-controls="mobile-menu" class="md:hidden ml-2 p-2 rounded focus:outline-none" aria-label="Open main menu">
          <svg x-show="!open" class="w-7 h-7 text-heading-dark" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" /></svg>
          <svg x-show="open" class="w-7 h-7 text-heading-dark" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" /></svg>
        </button>
      </div>
    </div>
    <!-- Mobile Nav -->
    <div id="mobile-menu" class="fixed inset-0 z-40 md:hidden backdrop-blur-2xl bg-surface/20 h-screen" x-show="open" x-transition:enter="transition-transform duration-300" x-transition:enter-start="translate-x-full" x-transition:enter-end="translate-x-0" x-transition:leave="transition-transform duration-300" x-transition:leave-start="translate-x-0" x-transition:leave-end="translate-x-full" style="display: none;">
      <div class="absolute inset-0 bg-surface/80" @click="open = false" tabindex="-1" aria-hidden="true"></div>
      <nav class="absolute right-0 top-0 h-full w-4/5 max-w-xs backdrop-blur-3xl shadow-2xl flex flex-col py-8 px-6 gap-6 focus:outline-none" @keydown.escape.window="open = false">
        <button @click="open = false" class="self-end mb-6 p-2 rounded focus:outline-none focus:ring-2 focus:ouline-none" aria-label="Close menu">
          <svg class="w-7 h-7 text-heading-dark" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" /></svg>
        </button>
        <ul class="flex flex-col gap-4 text-lg font-medium text-heading-dark">
          <li><a href="#services" class="hover:text-accent transition" @click="open = false">Services</a></li>
          <li><a href="#gallery" class="hover:text-accent transition" @click="open = false">Gallery</a></li>
          <li><a href="#testimonials" class="hover:text-accent transition" @click="open = false">Testimonials</a></li>
          <li><a href="#service-areas" class="hover:text-accent transition" @click="open = false">Service Areas</a></li>
          <li><a href="#contact" class="hover:text-accent transition" @click="open = false">Contact</a></li>
        </ul>
        <div class="flex flex-col gap-3 mt-8">
          <a href="#signin" class="px-4 py-2 rounded-lg font-semibold text-heading-dark hover:bg-brand/20 transition">Sign In</a>
          <a href="#book" class="px-4 py-2 rounded-lg font-bold bg-accent text-heading-dark shadow hover:bg-brand hover:text-white transition">Book Online</a>
        </div>
      </nav>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
  </GlassCard>
</nav> 